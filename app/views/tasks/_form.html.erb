
<%= form_for task do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
  </div>

  <div class="form-group">
    <% if not task.new_record? %>
      <%= f.label :completed %>
      <%= f.check_box :completed, class: "form-check form-check-inline" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= link_to "Back to list", tasks_path, class: "btn btn-info "%>
    <%= f.submit "Done", class: "btn btn-primary" %>
  </div>

<% end %>
